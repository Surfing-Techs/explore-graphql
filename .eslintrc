{
   "extends": "airbnb-base",
   "rules": {
     "no-multiple-empty-lines": [1, {"max": 1}],
     "func-names": "off",
     "no-console": "off",
     "max-len": [
       "error",
       120
     ],
     "implicit-arrow-linebreak": [
       "error",
       "below"
     ],
     "newline-per-chained-call": [
       "error",
       {
         "ignoreChainWithDepth": 2
       }
     ],
     "comma-spacing": [
       "error",
       {
         "before": false,
         "after": true
       }
     ],
     "linebreak-style": [
       "error",
       "unix"
     ]
   },
   "env": {
     "commonjs": true,
     "node": true,
     "mocha": true
   }
 }